{
  "evolution": {
    "version": "1.0",
    "enabled": true
  },
  "genetic_algorithm": {
    "population_size": 10,
    "generations": 50,
    "mutation_rate": 0.2,
    "crossover_rate": 0.8,
    "elite_percentage": 0.2,
    "tournament_size": 3
  },
  "prompt_evolution": {
    "strategy": "genetic_algorithm",
    "fitness_metric": "combined_score",
    "fitness_weights": {
      "quality": 0.5,
      "speed": 0.2,
      "consistency": 0.3
    },
    "min_fitness_threshold": 0.6
  },
  "evaluation": {
    "test_samples": 10,
    "timeout_seconds": 30,
    "retry_on_failure": true
  },
  "storage": {
    "save_evolved_prompts": true,
    "save_evolution_history": true,
    "archive_path": "./evolution/archives/"
  }
}
